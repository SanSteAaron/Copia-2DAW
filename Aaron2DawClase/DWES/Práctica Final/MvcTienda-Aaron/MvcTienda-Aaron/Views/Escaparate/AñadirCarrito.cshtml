@model MvcTienda_Aaron.Models.Producto
@{
    ViewData["Title"] = "AñadirCarrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carrito</h1>

<div>
    <h4>Producto</h4>
    <hr/>
    <dl class="row">
        <dd class="col-sm-10">
            <div>
                @{
                    var nombreImagen = "imagen-no-disponible.jpg";
                    if(Model.Imagen != null){
                        nombreImagen = Model.Imagen;
                    }
                }

                <img src="~/images/@nombreImagen" style="width:250px; height:250px;" alt="No funciona" />

            </div>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-12">
            @Html.DisplayFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            <br/>
            <form asp-action="AñadirCarrito">
                <div class="form-group" hidden>
                    @Html.DisplayFor(model => model.Id)
                </div>
                <div class="form-group">
                    <input type="submit" value="Añadir al carrito" class="btn btn-dark" asp-action="AñadirCarrito"/>
                </div>
            </form>
        </dd>
    </dl>
</div>