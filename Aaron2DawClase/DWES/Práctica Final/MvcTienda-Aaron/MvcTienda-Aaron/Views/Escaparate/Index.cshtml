@model IEnumerable<MvcTienda_Aaron.Models.ProductoTalla>

@{
    ViewData["Title"] = "Indice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<main class="container-fluid">
    <div class="row">
        @*Categorias*@
        <div class="col-lg-12 col-md-12 col-sm-12 text-center justify-content-center text-brown">
            <table class="table">
                <tr>
                @foreach (var i in ViewData["Listacategorias"] as IEnumerable<Categoria>)
                {
                    
                        <td>
                            <a asp-action="Index"  asp-route-id="@i.Id" class="text-uppercase text-brown fw-bold text-decoration-none">@i.Descripcion</a>
                        </td>
                   
                }
                </tr>
            </table>
        </div> 
    </div>
    <br/>
    <div class="row">
        @*Tarjeta de productos*@
        <div class="col-lg-12 col-md-12 col-sm-12 justify-content-center text-center">
            <div class="card-columns">
                @foreach (var producto in ViewData["Listaproductos"] as IEnumerable<Producto>)
                {
                    <div class="card shadow d-inline-block align-middle text-brown m-1" style="width:300px; height:570px; text-align:center">
                        <div>
                            @{
                                var nombreImagen = "error.png";
                                if (producto.Imagen != null)
                                {
                                    nombreImagen = producto.Imagen;
                                }
                            }
                            <img class="card-img-top" style="width:270px; height:270px; margin:10px;" src="~/images/@nombreImagen">
                        </div>
                        <div class="card-body" style="height:270px;">
                            <p class="card-text fw-bold text-uppercase" style="height:40px;">@Html.DisplayFor(modelItem => producto.Descripcion)</p>
                            <h4 class="fw-light">
                                @producto.PrecioCadena€
                            </h4>
                            @foreach (var item in Model)
                            {
                                @foreach (var talla in ViewData["Listatallas"] as IEnumerable<Talla>)
                                {
                                    if (item.ProductoId == producto.Id)
                                    {
                                        if (talla.Id == item.TallaId)
                                        {
                                            if (item.Stock >= 1)
                                            {
                                                <a asp-action="AñadirCarrito" asp-route-id="@item.Id" class="btn btn-outline-brown btn-sm w-100 mt-2">@talla.Descripcion - @item.Stock Disponibles</a>
                                            }
                                            else
                                            {
                                                <a asp-action="" asp-route-id="@item.Id" class="btn btn-outline-brown btn-sm w-100 mt-2 disabled">@talla.Descripcion - No Disponibles</a>
                                            }
                                        }
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>

