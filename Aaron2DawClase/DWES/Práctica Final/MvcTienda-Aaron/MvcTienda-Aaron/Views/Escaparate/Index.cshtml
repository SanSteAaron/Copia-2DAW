@model IEnumerable<MvcTienda_Aaron.Models.ProductoTalla>

@{
    ViewData["Title"] = "Indice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Escaparate</h1>
<h4>@ViewBag.Categoria</h4>

<main class="container-fluid">
    <div class="row">
        @*Categorias*@
        <div class="col-lg-2 col-md-12 col-sm-12">
            <table class="table">
                @foreach (var i in ViewData["Listacategorias"] as IEnumerable<Categoria>)
                {
                    <tr>
                        <td>
                            <a asp-action="Index"  asp-route-id="@i.Id" class="text-uppercase text-black">@i.Descripcion</a>
                        </td>
                    </tr>
                }
            </table>
        </div>

        @*Tarjeta de productos*@
        <div class="col-lg-10 col-md-12 col-sm-12">
            <div class="card-columns">
                @foreach (var producto in ViewData["Listaproductos"] as IEnumerable<Producto>)
                {
                        <div class="card shadow d-inline-block align-middle m-3" style="width:300px; height:550px; text-align:center">
                            <div>
                                @{
                                    var nombreImagen = "error.png";
                                    if (producto.Imagen != null)
                                    {
                                        nombreImagen = producto.Imagen;
                                    }
                                }
                                <img class="card-img-top" style="width:200px; height:200px; margin:10px;" src="~/images/@nombreImagen">
                            </div>
                            <div class="card-body" style="height:300px;">
                                <p class="card-text fw-bolder" style="height:30px;">@Html.DisplayFor(modelItem => producto.Descripcion)</p>
                                <h4 class="fw-light">
                                    @producto.PrecioCadena€
                                </h4>
                                <br />
                                <p class="fw-bolder">Tallas Disponibles</p>
                                @foreach (var item in Model)
                                {
                                    @foreach (var talla in ViewData["Listatallas"] as IEnumerable<Talla>)
                                    {
                                        if (item.ProductoId == producto.Id)
                                        {
                                            if (talla.Id == item.TallaId)
                                            {
                                                <a asp-action="AñadirCarrito" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm w-100 mt-2">@talla.Descripcion - @item.Stock Disponibles</a>
                                            }
                                        }
                                    }
                                }
                            </div>
                        </div> 
                }
            </div>
        </div>
    </div>
</main>

